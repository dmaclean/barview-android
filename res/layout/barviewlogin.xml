<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:orientation="vertical"
  android:layout_width="match_parent"
  android:layout_height="match_parent" android:weightSum="1">
  
  	<LinearLayout 	xmlns:android="http://schemas.android.com/apk/res/android"
  					android:orientation="horizontal"
  					android:layout_width="match_parent"
  					android:layout_height="wrap_content">
	    <TextView android:id="@+id/bv_login_usertext" android:layout_height="wrap_content" android:layout_width="wrap_content" android:text="@string/bv_login_usertext" android:layout_weight="0.01"></TextView>
	    <EditText android:id="@+id/bv_login_username" android:layout_width="198dp" android:layout_height="wrap_content" android:layout_weight="0.01"></EditText>
    </LinearLayout>
    <LinearLayout 	xmlns:android="http://schemas.android.com/apk/res/android"
  					android:orientation="horizontal"
  					android:layout_width="match_parent"
  					android:layout_height="wrap_content">
	    <TextView android:id="@+id/bv_login_passtext" android:layout_height="wrap_content" android:layout_weight="0.04" android:layout_width="wrap_content" android:text="@string/bv_login_passtext"></TextView>
	    <EditText android:id="@+id/bv_login_password" android:layout_height="wrap_content" android:layout_width="184dp" android:layout_weight="0.07"></EditText>
    </LinearLayout>

    
</LinearLayout>
